NIMSFORESTFOLDERS_PATH ?= ../nimsforestfolders

-include $(NIMSFORESTFOLDERS_PATH)/MAKEFILE.nimsforestfolders

.PHONY: test
test:
	rm -rf tmp && \
	mkdir -p tmp && \
	cd tmp && \
	cp $(CURDIR)/MAKEFILE.nimsforestorganization . && \
	cp -r $(CURDIR)/docs . && \
	echo "-include $(NIMSFORESTFOLDERS_PATH)/MAKEFILE.nimsforestfolders" > Makefile && \
	make -f MAKEFILE.nimsforestorganization nimsforestorganization-addtomainmake NIMSFORESTFOLDERS_PATH=$(NIMSFORESTFOLDERS_PATH) && \
	make nimsforestorganization-hello NIMSFORESTFOLDERS_PATH=$(NIMSFORESTFOLDERS_PATH) && \
	DOCS_PATH=. make nimsforestorganization-init NIMSFORESTFOLDERS_PATH=$(NIMSFORESTFOLDERS_PATH) && \
	DOCS_PATH=. make nimsforestorganization-lint NIMSFORESTFOLDERS_PATH=$(NIMSFORESTFOLDERS_PATH) && \
	cd ..